<!DOCTYPE html>
<html>
<head>
  <title>Categories</title>
  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/categories.css">
</head>
<body>
  <%- include("partials/header.ejs") %>

  <main>
    <h1>Categories</h1>

    <ul>
      <% categories.forEach(cat => { %>
        <li>
          <%= cat.name %>
          <form action="/categories/<%= cat.id %>/delete" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirmDelete()">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <h2>Add New Category</h2>
    <form action="/categories" method="POST">
      <input type="text" name="category" placeholder="Category Name" required>
      <button type="submit">Add Category</button>
    </form>
  </main>
</body>

<script>
  function confirmDelete() {
    const input = prompt("Enter password to delete:");

    if (input !== DELETE_SECRET) {
      alert("Incorrect password.");
      return false;
    }

    return confirm("Are you sure you want to delete this item?");
  }

  const DELETE_SECRET = "passw0rd";
</script>

</html>
